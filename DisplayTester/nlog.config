<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true">
  <variable name="levelFormat" value="${level:uppercase=true}" />
  <!-- Having ${exception:format=ToString} at the end of my layout causes duplicate messages when logging an exception
       directly with Logger.Error(ex), Logger.Warn(ex), etc.  If you start missing error messages for some reason, add
       that back to the end of the log layout line -->
  <variable name="myLayout" value="${longdate} | ${levelFormat} | ${logger} | ${message}" />
  <variable name="myLayout2" value="${niceLog}${callsite:className=false:methodName=false}" />

  <!-- the targets to write to -->
  <targets>
    <target xsi:type="File" name="logFile" fileName="nlog.log"
            layout="${myLayout2}"
            deleteOldFileOnStartup="true" />

    <target xsi:type="ColoredConsole" name="colorConsole" useDefaultRowHighlightingRules="false" enableAnsiOutput="true" layout="${myLayout2}">
      <highlight-row condition="level == LogLevel.Debug" foregroundColor="Green" backgroundColor="NoChange" />
      <highlight-row condition="level == LogLevel.Info" foregroundColor="Blue" backgroundColor="NoChange" />
      <highlight-row condition="level == LogLevel.Warn" foregroundColor="Yellow" backgroundColor="NoChange" />
      <highlight-row condition="level == LogLevel.Error" foregroundColor="Red" backgroundColor="NoChange" />
      <highlight-row condition="level == LogLevel.Fatal" foregroundColor="Red" backgroundColor="White" />
    </target>
  </targets>

  <!-- rules to map from logger name to target -->
  <rules>
    <logger name="*" minlevel="Debug" writeTo="logFile, colorConsole" />
  </rules>
</nlog>
